<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ name | e }} | Climate Model</title>
    <link rel="stylesheet" href="../../stylesheets/emd-page.css">
    <script>
    // Fix breadcrumb link to work with any base URL
    document.addEventListener('DOMContentLoaded', function() {
        const breadcrumb = document.querySelector('.emd-breadcrumb a[href*="index.html"]');
        if (breadcrumb) {
            // Count directory levels (excluding filename)
            const path = window.location.pathname;
            const parts = path.split('/').filter(p => p && !p.includes('.html'));
            // Go up correct number of levels to reach root
            const upLevels = Math.max(parts.length - 1, 2);
            breadcrumb.href = '../'.repeat(upLevels) + 'index.html';
        }
    });
    </script>
</head>
<body class="emd-page">
    <div class="emd-container">
        <header class="emd-header">
            <nav class="emd-breadcrumb">
                <a href="../../index.html">← Back to Documentation</a>
                <span>|</span>
                <a href="https://emd.mipcvs.dev/" target="_blank">EMD Registry</a>
                <span>→</span>
                <a href="https://emd.mipcvs.dev/model/" target="_blank">Models</a>
                <span>→</span>
                <span>{{ name | e }}</span>
            </nav>
            <div class="emd-badge">Climate Model</div>
            <h1 class="emd-title">{{ name | e }}</h1>
            {% if family %}
            <p class="emd-long-name">
                {% if family.page %}<a href="{{ family.page | e }}" style="color:inherit;text-decoration:underline;text-decoration-color:#bbdefb;">{% endif %}{{ family.name | e }} Family{% if family.page %}</a>{% endif %}
            </p>
            {% endif %}
            <p class="emd-subtitle">{{ description | e }}</p>
            <div class="emd-header-meta">
                {% if family %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Family</span>
                    <span class="emd-meta-value">
                        <a href="{{ family.page | e }}">{{ family.name | e }}</a>
                    </span>
                </div>
                {% endif %}
                {% if institution %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Institution</span>
                    <span class="emd-meta-value">{{ institution.name | e }}</span>
                </div>
                {% endif %}
                {% if release_year %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Release Year</span>
                    <span class="emd-meta-value">{{ release_year }}</span>
                </div>
                {% endif %}
                {% if calendars %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Calendar{% if calendars | length > 1 %}s{% endif %}</span>
                    <span class="emd-meta-value">{{ calendars | map(attribute='name') | join(', ') }}</span>
                </div>
                {% elif calendar %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Calendar</span>
                    <span class="emd-meta-value">{{ calendar.name | e }}</span>
                </div>
                {% endif %}
                <div class="emd-meta-item">
                    <span class="emd-meta-label">Context</span>
                    <span class="emd-meta-value"><a href="{{ context_url | e }}" target="_blank">JSON-LD →</a></span>
                </div>
            </div>
        </header>

        <main>
            <!-- Description -->
            <section class="emd-section expanded">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.description | safe }}</div>
                        <h2 class="emd-section-title">Description</h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        <p class="emd-description-text">{{ description_highlighted | safe }}</p>
                    </div>
                </div>
            </section>

            <!-- Model Components - All grouped together -->
            {% set total_components = (dynamic_components | length) + (prescribed_components | length) + (omitted_components | length) %}
            {% if total_components > 0 %}
            <section class="emd-section expanded">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.domain | safe }}</div>
                        <h2 class="emd-section-title">Model Components <span class="emd-section-count">({{ total_components }})</span></h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        
                        <!-- Component Legend -->
                        <div class="emd-component-legend">
                            {% if dynamic_components %}<span class="emd-legend-item emd-legend-dynamic"><span class="emd-legend-dot"></span> Dynamic ({{ dynamic_components | length }})</span>{% endif %}
                            {% if prescribed_components %}<span class="emd-legend-item emd-legend-prescribed"><span class="emd-legend-dot"></span> Prescribed ({{ prescribed_components | length }})</span>{% endif %}
                            {% if omitted_components %}<span class="emd-legend-item emd-legend-omitted"><span class="emd-legend-dot"></span> Omitted ({{ omitted_components | length }})</span>{% endif %}
                        </div>
                        
                        <div class="emd-domain-grid">
                            <!-- Dynamic Components - Blue -->
                            {% for comp in dynamic_components %}
                            <div class="emd-domain-card emd-component-dynamic">
                                <div class="emd-domain-card-header">
                                    <span class="emd-domain-card-title">{{ comp.name | e }}</span>
                                    <span class="emd-domain-card-type emd-type-dynamic">Dynamic</span>
                                </div>
                                <div class="emd-domain-card-id">@id: {{ comp.id | e }}</div>
                                {% if comp.description %}
                                <p class="emd-domain-card-description">{{ comp.description | e }}</p>
                                {% endif %}
                                {% if comp.aliases %}
                                <div class="emd-domain-card-aliases">
                                    {% for alias in comp.aliases %}
                                    <span class="emd-alias-tag">{{ alias | e }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            </div>
                            {% endfor %}
                            
                            <!-- Prescribed Components - Green -->
                            {% for comp in prescribed_components %}
                            <div class="emd-domain-card emd-component-prescribed">
                                <div class="emd-domain-card-header">
                                    <span class="emd-domain-card-title">{{ comp.name | e }}</span>
                                    <span class="emd-domain-card-type emd-type-prescribed">Prescribed</span>
                                </div>
                                <div class="emd-domain-card-id">@id: {{ comp.id | e }}</div>
                                {% if comp.description %}
                                <p class="emd-domain-card-description">{{ comp.description | e }}</p>
                                {% endif %}
                                {% if comp.aliases %}
                                <div class="emd-domain-card-aliases">
                                    {% for alias in comp.aliases %}
                                    <span class="emd-alias-tag">{{ alias | e }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            </div>
                            {% endfor %}
                            
                            <!-- Omitted Components - Red -->
                            {% for comp in omitted_components %}
                            <div class="emd-domain-card emd-component-omitted">
                                <div class="emd-domain-card-header">
                                    <span class="emd-domain-card-title">{{ comp.name | e }}</span>
                                    <span class="emd-domain-card-type emd-type-omitted">Omitted</span>
                                </div>
                                <div class="emd-domain-card-id">@id: {{ comp.id | e }}</div>
                                {% if comp.description %}
                                <p class="emd-domain-card-description">{{ comp.description | e }}</p>
                                {% endif %}
                                {% if comp.aliases %}
                                <div class="emd-domain-card-aliases">
                                    {% for alias in comp.aliases %}
                                    <span class="emd-alias-tag">{{ alias | e }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
            {% endif %}

            <!-- Component Architecture (Embedding & Coupling) -->
            {% if embedded_components or coupling_groups %}
            <section class="emd-section expanded">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.coupling | safe }}</div>
                        <h2 class="emd-section-title">Component Architecture</h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        
                        {% if embedded_components %}
                        <h3 class="emd-subsection-title">Embedded Components</h3>
                        <p class="emd-description-text" style="margin-bottom: 1rem;">Components that are tightly integrated within a host component.</p>
                        <div class="emd-embedding-list">
                            {% for emb in embedded_components %}
                            <div class="emd-embedding-item">
                                <span class="emd-embedding-embedded">{{ emb.embedded_name | e }}</span>
                                <span class="emd-embedding-arrow">→ embedded in →</span>
                                <span class="emd-embedding-host">{{ emb.host_name | e }}</span>
                            </div>
                            {% endfor %}
                        </div>
                        {% endif %}
                        
                        {% if coupling_groups %}
                        <h3 class="emd-subsection-title" {% if embedded_components %}style="margin-top: 2rem;"{% endif %}>Coupling Groups</h3>
                        <p class="emd-description-text" style="margin-bottom: 1rem;">Groups of components that exchange data through coupling.</p>
                        <div class="emd-coupling-groups">
                            {% for group in coupling_groups %}
                            <div class="emd-coupling-group">
                                <span class="emd-coupling-label">Group {{ loop.index }}:</span>
                                <div class="emd-coupling-components">
                                    {% for comp in group.component_names %}
                                    <span class="emd-coupling-component">{{ comp | e }}</span>
                                    {% if not loop.last %}<span class="emd-coupling-separator">↔</span>{% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </section>
            {% endif %}

            <!-- Component Configurations -->
            {% if component_configs %}
            <section class="emd-section">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.grid | safe }}</div>
                        <h2 class="emd-section-title">Component Configurations <span class="emd-section-count">({{ component_configs | length }})</span></h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        <p class="emd-description-text" style="margin-bottom: 1rem;">Specific configurations linking model components to their computational grids.</p>
                        <div class="emd-domains-grid">
                            {% for config in component_configs %}
                            <div class="emd-domain-card">
                                <div class="emd-domain-card-header">
                                    <span class="emd-domain-card-title">{{ config.component | e if config.component else config.name | e }}</span>
                                    <span class="emd-domain-card-type">Config</span>
                                </div>
                                <div class="emd-domain-card-id">{{ config.id | e }}</div>
                                {% if config.description %}
                                <p class="emd-domain-card-description">{{ config.description | e }}</p>
                                {% endif %}
                                <div class="emd-domain-card-meta">
                                    {% if config.h_grid %}
                                    <a href="{{ config.h_grid_page | e }}" class="emd-meta-tag" title="Horizontal Computational Grid">H: {{ config.h_grid | e }}</a>
                                    {% endif %}
                                    {% if config.v_grid %}
                                    <a href="{{ config.v_grid_page | e }}" class="emd-meta-tag" title="Vertical Computational Grid">V: {{ config.v_grid | e }}</a>
                                    {% endif %}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
            {% endif %}

            <!-- Technical Details -->
            <section class="emd-section">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.tech | safe }}</div>
                        <h2 class="emd-section-title">Technical Details</h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        <div class="emd-tech-grid">
                            <div class="emd-tech-item">
                                <div class="emd-tech-label">Resource Identifier (@id)</div>
                                <div class="emd-tech-value">{{ id | e }}</div>
                            </div>
                            <div class="emd-tech-item">
                                <div class="emd-tech-label">Validation Key</div>
                                <div class="emd-tech-value">{{ validation_key | e if validation_key else 'N/A' }}</div>
                            </div>
                            <div class="emd-tech-item">
                                <div class="emd-tech-label">JSON-LD Context</div>
                                <div class="emd-tech-value"><a href="{{ context_url | e }}" target="_blank">{{ context_url | replace('https://', '') | e }}</a></div>
                            </div>
                            <div class="emd-tech-item">
                                <div class="emd-tech-label">Resource Types (@type)</div>
                                <div class="emd-type-badges">
                                    {% for t in types %}<span class="emd-type-badge">{{ t | e }}</span>{% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- References -->
            {% set ref_count = references | length if references else 0 %}
            <section class="emd-section{% if ref_count > 0 %} expanded{% endif %}">
                <div class="emd-section-header" onclick="toggleSection(this)">
                    <div class="emd-section-title-wrapper">
                        <div class="emd-section-icon">{{ icons.reference | safe }}</div>
                        <h2 class="emd-section-title">References <span class="emd-section-count">({{ ref_count }})</span></h2>
                    </div>
                    <div class="emd-section-toggle">{{ icons.chevron | safe }}</div>
                </div>
                <div class="emd-section-content">
                    <div class="emd-section-body">
                        <div class="emd-section-divider"></div>
                        {% if references %}
                        {% for ref in references %}
                        <a href="{{ ref | e }}" class="emd-reference-item" target="_blank">
                            <div class="emd-reference-icon">{{ icons.description | safe }}</div>
                            <span class="emd-reference-text">{{ ref | e }}</span>
                            <span class="emd-reference-arrow">→</span>
                        </a>
                        {% endfor %}
                        {% else %}
                        <p class="emd-description-text">No references available.</p>
                        {% endif %}
                    </div>
                </div>
            </section>
        </main>

        <footer class="emd-footer">
            <p class="emd-footer-text">Data sourced from <a href="https://emd.mipcvs.dev/" class="emd-footer-link" target="_blank">EMD Registry</a> · Part of the <a href="https://wcrp-cmip.org/" class="emd-footer-link" target="_blank">WCRP CMIP</a> initiative · Generated {{ generated_date }}</p>
        </footer>
    </div>
    <script>
    function toggleSection(header) { header.parentElement.classList.toggle('expanded'); }
    
    const sourceData = {{ raw_json | safe }};
    document.addEventListener("copy", function(e) {
        e.preventDefault();
        const jsonString = JSON.stringify(sourceData, null, 2);
        const copyText = "// JSON-LD Source Data for {{ name | e }}\n// From: {{ context_url | e }}\n// EMD Registry: https://emd.mipcvs.dev/\n// Generated: {{ generated_date }}\n\n" + jsonString;
        e.clipboardData.setData("text/plain", copyText);
    });
    </script>
</body>
</html>
